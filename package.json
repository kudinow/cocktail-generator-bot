{
  "name": "cocktail-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for finding cocktail recipes based on available ingredients",
  "main": "dist/bot.js",
  "scripts": {
    "dev": "nodemon --ignore data/ --exec ts-node src/bot.ts",
    "build": "tsc",
    "start": "node dist/bot.js",
    "type-check": "tsc --noEmit",
    "parse:inshaker": "ts-node scripts/parseInshaker.ts",
    "images:download": "ts-node scripts/downloadCocktailImages.ts",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:start": "cd web && npm run start",
    "dashboard": "ts-node src/dashboardServer.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "cocktails",
    "recipes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20.0.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "cheerio": "^1.2.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
